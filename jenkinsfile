pipeline {
  agent any
  stages {
    stage('Récupérer le code') {
      steps {
        git branch: 'main', url: 'https://github.com/mon-projet.git'
      }
    }
    stage('Installer les dépendances') {
      steps {
        sh 'pip install -r requirements.txt'
      }
    }
    stage('Exécuter les tests') {
      steps {
        sh 'pytest'
      }
    }
  }
}
