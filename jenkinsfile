pipeline {
  agent any
  stages {
    stage('Récupérer le code') {
      steps {
        git branch: 'main', url: 'https://github.com/fatoumbodj/pyshop.git'
      }
    }
    stage('Afficher un message') {
      steps {
        echo 'Le code a été récupéré avec succès !'
      }
    }
        stage('Install dependencies') {
            steps {
                // installe les dépendances avec Pipenv
                sh 'pipenv install --dev'
            }
        }
        stage('Unit tests') {
            steps {
                // exécute les tests unitaires
                sh 'pipenv run pytest'
            }
        }
        // ajouter d'autres stages pour les tests de sécurité, la construction d'image Docker, etc.
    
        stage('Construire l\'image Docker') {
            steps {
                sh 'docker build -t my-image .'
            }
        }
        
        stage('Deploy') {
            environment {
                SERVER_IP = 'xxx.xxx.xxx.xxx' // Adresse IP du serveur de déploiement
                SERVER_USER = 'user' // Nom d'utilisateur pour se connecter au serveur
                SERVER_PASSWORD = credentials('server_password') // Mot de passe pour se connecter au serveur stocké dans Jenkins credentials
            }
            steps {
                sshagent(['server_password']) {
                    sh "ssh ${SERVER_USER}@${SERVER_IP} 'sudo systemctl stop app.service'" // Arrêter le service sur le serveur de déploiement
                    sh "scp target/myapp.jar ${SERVER_USER}@${SERVER_IP}:~/myapp.jar" // Copier le fichier JAR sur le serveur de déploiement
                    sh "ssh ${SERVER_USER}@${SERVER_IP} 'sudo systemctl start app.service'" // Démarrer le service sur le serveur de déploiement
                }
            }
        }
    }
}
