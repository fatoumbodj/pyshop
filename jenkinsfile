pipeline {
  agent any
  stages {
    stage('Récupérer le code') {
      steps {
        git branch: 'main', url: 'https://github.com/fatoumbodj/pyshop.git'
      }
    }
     stage('Installer les dépendances') {
            steps {
                sh 'pip install -r requirements.txt' // pour les projets Python
            }
        }
  stage('Tests unitaires') {
            steps {
                sh 'pytest' // pour les projets Python avec pytest
                sh 'nosetests' // pour les projets Python avec nose
            }
        }
        
    post {
        failure {
            emailext subject: "Échec de la pipeline ${env.JOB_NAME} sur la branche ${env.BRANCH_NAME}",
                body: """La pipeline ${env.JOB_NAME} a échoué sur la branche ${env.BRANCH_NAME}.
                Veuillez consulter les journaux de la pipeline pour plus d'informations."""
        }
    }
}
