pipeline {
    agent any

    stages {
        stage('Récupérer le code') {
            steps {
                git branch: 'nom-de-la-branche', url: 'https://github.com/username/repository.git'
            }
        }

        stage('Installer les dépendances avec Maven') {
            steps {
                sh 'mvn install'
            }
        }
    }
}
